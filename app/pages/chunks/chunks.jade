#sigma(style="width: 99%; height: 300px; ")
table.table.table-condensed
	thead
		tr
			th id
			th names
			th modules
			th size
			th parents
			th flags
	tbody
		each chunk in stats.chunks
			tr
				td: a.btn.btn-info(href="#chunk/#{chunk.id}")= chunk.id
				td
					each name in chunk.names
						code= name
						= " "
				td= chunk.modules.length
				td= chunk.size + " bytes"
				td
					each parent in chunk.parents
						a.btn.btn-info(href="#chunk/#{parent}")= parent
						= " "
				td
					if chunk.rendered
						span.label.label-success rendered